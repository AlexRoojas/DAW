<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>gestionaBD</servlet-name>
        <servlet-class>gestionaBD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargaBD</servlet-name>
        <servlet-class>cargaBD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargaGen</servlet-name>
        <servlet-class>cargaGen</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cargaGen</servlet-name>
        <url-pattern>/cargaGen</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cargaDir</servlet-name>
        <servlet-class>cargaDir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gestionaBD</servlet-name>
        <url-pattern>/gestionaBD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cargaBD</servlet-name>
        <url-pattern>/cargaBD</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>conCompleta</param-name>
        <param-value>com.mysql.jdbc.Driver;jdbc:mysql://localhost/;peliculas;servidores;servidores</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>cargaDir</servlet-name>
        <url-pattern>/cargaDir</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
