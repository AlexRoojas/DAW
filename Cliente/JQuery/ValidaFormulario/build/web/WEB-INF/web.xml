<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>form_Validate21.html</welcome-file>
    </welcome-file-list>
    
     <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost/cd</param-value>
    </context-param>
   <context-param>
        <param-name>userName</param-name>
        <param-value>cd</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>cd</param-value>
    </context-param>
    <servlet>
        <servlet-name>controlAcceso</servlet-name>
        <servlet-class>Servlets.controlAcceso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>compruebaEmail</servlet-name>
        <servlet-class>Servlets.compruebaEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>compruebaEmailRemote</servlet-name>
        <servlet-class>Servlets.compruebaEmailRemote</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlAcceso</servlet-name>
        <url-pattern>/controlAcceso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compruebaEmail</servlet-name>
        <url-pattern>/compruebaEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compruebaEmailRemote</servlet-name>
        <url-pattern>/compruebaEmailRemote</url-pattern>
    </servlet-mapping>

</web-app>
